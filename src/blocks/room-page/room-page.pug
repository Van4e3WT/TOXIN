include ~Blocks/collage/collage.pug
include ~Blocks/room-privilege/room-privilege.pug
include ~Blocks/circle-diagram/circle-diagram.pug
include ~Blocks/total-card/total-card.pug
include ~Blocks/comments/comments.pug
include ~Blocks/bullet-list/bullet-list.pug
include ~Blocks/free-cancel/free-cancel.pug

mixin room-page(props)
  - const { commentaries, images, privileges, circleDiagram, totalCard, rules, freeCancel } = props
  .room
    .room__collage
      +collage(images)
    .room__body
      .room__about
        h2.room__header Сведения о номере
        .room__privileges
          each privilege in privileges
            +room-privilege(privilege)
      .room__reviews
        h2.room__header Впечатления от номера
        +circle-diagram(circleDiagram)
      .room__check
        +total-card(totalCard)
      .room__comments
        +comments(commentaries)
      .room__bullet-list
        h2.room__header.room__bullet-header Правила
        +bullet-list(rules)
      if(freeCancel)
        .room__free-cancel
          h2.room__header Отмена
          +free-cancel()