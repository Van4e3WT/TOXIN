//- @param {object} with properties
//- title - {string} block's header
//- bullets - {Array<string>} array bullet items
//- addedClasses - {string} addition classes for block
mixin bullet-list(props)
  - let { title="", bullets, addedClasses="" } = props
  .bullet-list(class=`${addedClasses}`)
    if title
      h2.bullet-list__title=title
    ul.bullet-list__content
      each bullet in bullets
        li.bullet-list__item=bullet