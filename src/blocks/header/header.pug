include __ref-item/header__ref-item.pug
include ~Blocks/logo/logo.pug
include ~Blocks/button/button.pug

mixin header(isAuthorized)
  .header
    .header__wrapper.container
      .header__head
        .header__logo
          +logo()
        .header__burger.js-header__burger
          .header__burger-divisions.js-header__burger-divisions
      .header__body.js-header__body
        +header__ref-item("О\xA0нас", "/plug-link")
        +header__ref-item("Услуги", [
          ["Услуга 1", "/plug-link"],
          ["Услуга 2", "/plug-link"],
          ["Услуга 3", "/plug-link"],
        ])
        +header__ref-item("Вакансии", "/plug-link")
        +header__ref-item("Новости", "/plug-link")
        +header__ref-item("Соглашения", [
          ["Соглашение 1", "/plug-link"],
          ["Соглашение 2", "/plug-link"],
          ["Соглашение 3", "/plug-link"],
        ])
        if isAuthorized
          .header__item
            .header__user Константин Константинопольский
        else
          .header__item
            +button({
              reference: "login.html",
              content: "Войти",
              modificators: ["theme_bordered"]
            })
          .header__item
            +button({
              reference: "registration.html",
              content: "Зарегистрироваться"
            })