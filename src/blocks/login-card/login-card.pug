include ~Blocks/button/button.pug

mixin login-card()
  .login-card
    h1.login-card__header Войти
    .login-card__fields
      input.login-card__field(type="email", name="email" placeholder="Email")
      input.login-card__field(type="password", name="password" placeholder="Пароль")
    .login-card__send
      +button({
        reference: "/plug-link",
        content: "Войти",
        modificators: ["theme_directed", "transform_high"]
      })
    .login-card__help
      p.login-card__text Нет аккаунта на Toxin?
      +button({
        reference: "registration.html",
        content: "Создать",
        modificators: ["theme_bordered", "transform_high"]
      })