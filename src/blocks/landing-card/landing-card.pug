include ~Blocks/twin-datepick/twin-datepick.pug
include ~Blocks/dropdown-absolute/dropdown-absolute.pug
include ~Blocks/button/button.pug

mixin landing-card(props)
  - const { twinDatepick, dropdownAbsolute, button } = props;

  .landing-card
    h1.landing-card__header Найдём номера под ваши пожелания
    form.landing-card__form(action="", method="post")
      .landing-card__twin-datepick
        -
          const {
            defaultName = 'date dropdown',
            field1 = defaultName,
            field2 = defaultName
          } = twinDatepick

        +twin-datepick(field1, field2)
      h3.landing-card__label Гости
      .landing-card__dropdown-absolute
        +dropdown-absolute(dropdownAbsolute)
      +button(button)