include ~Blocks/twin-datepick/twin-datepick.pug
include ~Blocks/dropdown-absolute/dropdown-absolute.pug
include ~Blocks/button/button.pug

mixin landing-card()
  .landing-card
    h1.landing-card__header Найдём номера под ваши пожелания
    form.landing-card__form(action="", method="post")
      +twin-datepick("Прибытие", "Выезд", "landing-card__twin-datepick")
      label.landing-card__label Гости
      +dropdown-absolute({
        wordforms: ["гость", "гостя", "гостей"],
        items: ["Взрослые", "Дети", "Младенцы"],
        isOpen: false,
        defaultText: "Сколько гостей",
        addedClasses: "landing-card__dropdown-absolute"
      })
      +button({ 
        reference: "search-room.html",
        content: "Подобрать номер",
        modificators: ["directed", "high"]
      })