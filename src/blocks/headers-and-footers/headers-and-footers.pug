include ~Blocks/svg-ui/svg-ui.pug
include ~Blocks/header/header.pug
include ~Blocks/footer/footer.pug
include ~Blocks/footer/_mobile/footer_mobile.pug

mixin headers-and-footers(props)
  - const { headers = [], footer, footerMobile } = props;

  .headers-and-footers
    +svg-ui()
    each header in headers
      .headers-and-footers__item
        +header(header)
    +footer(footer)
    .headers-and-footers__wrapper
      +footer_mobile(footerMobile)