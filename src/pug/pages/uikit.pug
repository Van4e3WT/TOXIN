html(lang="ru-RU")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(http-equiv="x-ua-compatible" content="IE=edge")
        link(rel="shortcut icon", href="./assets/favicon.ico", type="image/icon")
        title= "UI Kit"
    body
        include ../mixins/mixin.pug
        .uikit
            section(name="colors-and-fonts").colors-and-fonts
                +svgUI()
                .colors-and-fonts__row
                    .colors-and-fonts__column
                        +color-itemUI("#1F2041", "Dark Shade 100%", "1")
                        +color-itemUI("#1F2041", "Dark Shade 75%", "0.75")
                        +color-itemUI("#1F2041", "Dark Shade 50%", "0.5")
                        +color-itemUI("#1F2041", "Dark Shade 25%", "0.25")
                        +color-itemUI("#1F2041", "Dark Shade 5%", "0.05")
                        +color-itemUI("#BC9CFF", "Purple", "1")
                        +color-itemUI("#6FCF97", "Green", "1")
                    .colors-and-fonts__column
                        .colors-and-fonts__text-item
                            h1.colors-and-fonts__text-description H1
                            h1 
                                |This one is the sub-section or
                                br
                                |widget title
                        .colors-and-fonts__text-item
                            h2.colors-and-fonts__text-description H2
                            h2
                                | Next one is the item title inside 
                                br
                                | widgets
                        .colors-and-fonts__text-item
                            h3.colors-and-fonts__text-description H3
                            h3 This is a label or CTA text
                        .colors-and-fonts__text-item
                            p.colors-and-fonts__text-description Body
                            p 
                                |This is the body text which is used for most
                                br
                                |of the design, like paragraphs, lists, etc.
            section(name="form-elements").form-elements
                +svgUI()
                .container
                    .grid
                        .div1
                            label text field
                            .promt default
                            input(type="text", name="textfield1", placeholder="Email")
                            label text field
                            .promt hover / focus
                            input(type="text", name="textfield2", value="This is pretty awesome", class="hover-focus")
                            label dropdown
                            .promt default
                            +dropdownGuests()
                            .wrapper
                                label masked text field
                                .promt default
                                input(type="text", name="maskedtextfield", id="dateSolo", placeholder="ДД.ММ.ГГГГ", readonly)
                            .wrapper
                                +twinDatepick("date dropdown", "date dropdown")
                            .wrapper
                                label Filter date dropdown
                                +dateSoloRange()
                            label subscription text field
                            +formSubscribe()
                        .div2
                            .wrapper
                                label.header Checkbox buttons
                                +checkbox("Можно курить", "forSmoking", false)
                                +checkbox("Можно с питомцами", "forPets", true)
                                +checkbox("Можно пригласить гостей (до 10 человек)", "forParty", true)
                            .wrapper
                                label.header Radio buttons
                                .radiobutton-group
                                    +radiobutton("Мужчина", "isMan", "sex", true)
                                    +radiobutton("Женщина", "isWoman", "sex", false)
                            .wrapper
                                label.header Toggle
                                +togglebutton("Получать спецпредложения", "specialOffers1", true)
                                +togglebutton("Получать спецпредложения", "specialOffers2", false)
                            .wrapper
                                label.header Like button
                                br
                                +likebutton("id1", 2, false)
                                +likebutton("id2", 12, true)
                            .wrapper
                                label.header Rate button
                                br
                                +ratebutton("rb1", 4)
                                //-+ratebutton("rb2", 5)
                                +rateresult("rb3", 5)
                        .div3
                            label Range Slider
                        .div4
                        .div5
                        .div6
                        .div7
                        .div8
                        .div9
                        .div10
                        .div11
            section(name="headers-and-footers").headers-and-footers
                +svgUI()
                .headers-and-footers__item
                    +header(false)
                .headers-and-footers__item
                    +header(true)
                .headers-and-footers__item
                    +footer()
                .headers-and-footers__item
                    +footerMobile()