extends ../layouts/base.pug

block variables
    -let title = "Landing Page"
    -let isAuthorized = false

block content
    .landing
        .container
            .landing__form
                h1 Найдём номера под ваши пожелания
                form(action="", method="post")
                    +twinDatepick("Прибытие", "Выезд")
                    label Гости
                    +dropdownGuests()
                +button("#", "Подобрать номер", "", "send-button")
            .landing__slogan
                p
                |Лучшие номера для вашей работы,
                br
                |отдыха и просто вдохновения