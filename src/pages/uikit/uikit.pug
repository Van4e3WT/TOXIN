                checkboxes: [
                  "Завтрак",
                  ["Письменный стол", true],
                  ["Стул для кормления", true],
                  ["Кроватка", true],
                  "Телевизор",
                  "Шампунь",
                  "Телевизор",
                  "Шампунь",
                ],
                isOpen: true
