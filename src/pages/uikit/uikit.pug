              .form-elements__mb-40
                label.form-elements__mb-17 Like button
                .form-elements__likes
                  .form-elements__like
                    +like-button(2, false)
                  .form-elements__like
                    +like-button(12, true)
              .form-elements__mb-40
                label.form-elements__mb-17 Rate button
                .form-elements__rates
                  .form-elements__rate
                    +rate-button("rating", 4)
                  .form-elements__rate
                    +rate-result(5)
            .form-elements__div3
              .form-elements__mb-45
                +range-slider({
                  minValue: 0,
                  maxValue: 15000,
                  value1: 5000,
                  value2: 10000,
                  step: 100,
                  sliderType: "double"
                })
              .form-elements__mb-40
                label.form-elements__mb-20 buttons
                .form-elements__buttons.form-elements__mb-32
                  .form-elements__button.form-elements__mb-40
                    +button({
                      reference: "#",
                      content: "click me"
                    })
                  .form-elements__button.form-elements__mb-40
                    +button({
                      reference: "#",
                      content: "click me"
                    })
                  .form-elements__button.form-elements__mb-32
                    +button({
                      reference: "#",
                      content: "click me",
                      modificator: "ghost-button"
                    })
