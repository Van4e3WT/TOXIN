    mixin color-itemUI(color, name, opacity)
      .colors-and-fonts__color-item
        .colors-and-fonts__color-example(style="background-color: " + color + "; opacity: " + opacity + ";")
        .colors-and-fonts__color-description
          h2=name
          p=color

    .uikit
      article.form-elements
        +svgUI()
        .container
          .form-elements__grid
            .form-elements__div1
              .form-elements__mb-20
                label.form-elements__mb-5 text field
                .form-elements__promt default
                input(type="text", name="textfield1", placeholder="Email")
              .form-elements__mb-20
                label.form-elements__mb-5 text field
                .form-elements__promt hover / focus
                input(type="text", name="textfield2", value="This is pretty awesome", class="hover-focus")
              .form-elements__mb-20
                label.form-elements__mb-5 dropdown
                +dropdown-absolute({
                  wordforms: ["гость", "гостя", "гостей"],
                  items: ["Взрослые", "Дети", "Младенцы"],
                  isOpen: false,
                  defaultText: "Сколько гостей"
                })
              .form-elements__mb-40
                label.form-elements__mb-5 masked text field
                +date-solo()
              .form-elements__mb-40
                +twin-datepick("date dropdown", "date dropdown")
              .form-elements__mb-40
                label.form-elements__mb-5 Filter date dropdown
                +date-solo-range()
              .form-elements__mb-40
                label.form-elements__mb-5 subscription text field
                +form-subscribe()
            .form-elements__div2
              .form-elements__mb-32
                label.form-elements__mb-17 Checkbox buttons
                +checkbox({
                  content: "Можно курить",
                  addedClasses: "form-elements__mb-10"
                })
                +checkbox({
                  content: "Можно с питомцами",
                  isChecked: true,
                  addedClasses: "form-elements__mb-10"
                })
                +checkbox({
                  content: "Можно пригласить гостей (до 10 человек)",
                  isChecked: true,
                  addedClasses: "form-elements__mb-10"
                })
              .form-elements__mb-32
                label.form-elements__mb-20 Radio buttons
                .form-elements__radio
                  +radio-button({
                    content: "Мужчина",
                    name: "sexRegistration",
                    isChecked: true,
                    addedClasses: "register-card__radio"
                  })
                  +radio-button({
                    content: "Женщина",
                    name: "sexRegistration",
                    addedClasses: "register-card__radio"
                  })
              .form-elements__mb-45
                label.form-elements__mb-20 Toggle
                +toggle-button("Получать спецпредложения", true, "form-elements__mb-10")
                +toggle-button("Получать спецпредложения", false, "form-elements__mb-10")
              .form-elements__mb-40
                label.form-elements__mb-17 Like button
                .form-elements__likes
                  .form-elements__like
                    +like-button(2, false)
                  .form-elements__like
                    +like-button(12, true)
              .form-elements__mb-40
                label.form-elements__mb-17 Rate button
                .form-elements__rates
                  .form-elements__rate
                    +rate-button("rating", 4)
                  .form-elements__rate
                    +rate-result(5)
