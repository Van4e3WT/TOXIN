    mixin color-itemUI(color, name, opacity)
      .colors-and-fonts__color-item
        .colors-and-fonts__color-example(style="background-color: " + color + "; opacity: " + opacity + ";")
        .colors-and-fonts__color-description
          h2=name
          p=color

    .uikit
      article.colors-and-fonts
        +svgUI()
        .container
          .colors-and-fonts__grid
            .colors-and-fonts__col
              +color-itemUI("#1F2041", "Dark Shade 100%", "1")
              +color-itemUI("#1F2041", "Dark Shade 75%", "0.75")
              +color-itemUI("#1F2041", "Dark Shade 50%", "0.5")
              +color-itemUI("#1F2041", "Dark Shade 25%", "0.25")
              +color-itemUI("#1F2041", "Dark Shade 5%", "0.05")
              +color-itemUI("#BC9CFF", "Purple", "1")
              +color-itemUI("#6FCF97", "Green", "1")
            .colors-and-fonts__column
              .colors-and-fonts__text-item
                h1.colors-and-fonts__text-description H1
                h1 This one is the sub-section or widget title
              .colors-and-fonts__text-item
                h2.colors-and-fonts__text-description H2
                h2 Next one is the item title inside widgets
              .colors-and-fonts__text-item
                label.colors-and-fonts__text-description H3
                label This is a label or CTA text
              .colors-and-fonts__text-item
                p.colors-and-fonts__text-description Body
                p
                  |This is the body text which is used for most
                  br
                  |of the design, like paragraphs, lists, etc.
      article.cards
          +svgUI()
          .container
            .cards__grid
              .cards__col
                .cards__cell
                  +landing-card()
                .cards__cell
                  +register-card()
              .cards__col
                .cards__cell
                  +total-card(888, true, 9900)
                .cards__cell
                  +login-card()
              .cards__col
